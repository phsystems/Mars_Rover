public class Squad<function> {
	private String nome;
	private int X;
	private int Y;
	private char D;
	private char[] mov;
	
	public String getNome() {
		return this.nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}

	public int getX() {
		return this.X;
	}

	public void setX(int X) {
		this.X = X;
	}

	public int getY() {
		return this.Y;
	}

	public void setY(int Y) {
		this.Y = Y;
	}

	public char getD() {
		return this.D;
	}

	public void setD(char D) {
		this.D = D;
	}

	public char getMov() {
		return this.getMov();
	}

	public void setMov(char[] mov) {
		this.mov = mov;
	}

	public void Xadd() {
		this.X = this.X + 1;
	}

	public void Yadd() {
		this.Y = this.Y + 1;
	}

	public void Xsub() {
		this.X = this.X - 1;
	}

	public void Ysub() {
		this.Y = this.Y - 1;
	}

	public void setXY(int x, int y) {
		this.setX(x);
		this.setY(y);
	}

	public void result() {
		System.out.println("The "+ this.getNome()+ " walked and stopped in the position");
		//System.out.println("\n");
		System.out.println("X:"+ this.getX());
		//System.out.println("\n");
		System.out.println("Y: "+ this.getY());
		System.out.println("\n");
		System.out.println("facing the " + this.getD());
		//System.out.println("\n");

	}

	public void movimenta(char[] mov) {

		for (char value : mov) {
			char Dir = this.getD();
			if (value == 'M' || value == 'R' || value == 'L') {

				if (value == 'M') {
					if (Dir == 'N') {
						this.Ysub();
					}
					if (Dir == 'S') {
						this.Yadd();
					}
					if (Dir == 'E') {
						this.Xadd();
					}
					if (Dir == 'W') {
						this.Xsub();
					}
				}
				if (value == 'R') {

					if (Dir == 'N') {
						this.setD('E');
					}
					if (Dir == 'S') {
						this.setD('W');
					}
					if (Dir == 'E') {
						this.setD('S');
					}
					if (Dir == 'W') {
						this.setD('N');
					}
				}
				if (value == 'L') {

					if (Dir == 'N') {
						this.setD('W');
					}
					if (Dir == 'S') {
						this.setD('E');
					}
					if (Dir == 'E') {
						this.setD('N');
					}
					if (Dir == 'W') {
						this.setD('S');
					}
				}

			}
		}
	}

	public void inicio(int x, int y, char D, char[] mov) {
		this.setXY(x, y);
		this.setD(D);
		this.movimenta(mov);
		this.result();
	}

	public static void main(String[] args) {

		Squad robotOne = new Squad();
		robotOne.setNome("Robot One");
		char[] MrobotOne = { 'L', 'M', 'L', 'M', 'L', 'M', 'L', 'M', 'M'};
		robotOne.inicio(1, 2, 'N', MrobotOne);
		System.out.println("\n");
		Squad robotTwo = new Squad();
		robotTwo.setNome("Robot Two");
		char[] MrobotTwo = { 'M', 'M', 'R', 'M', 'M', 'R', 'M', 'R', 'R', 'M' };
		robotTwo.inicio(3, 3, 'E', MrobotTwo);
		
	}
}
